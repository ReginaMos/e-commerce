    "sass": "^1.87.0",
    "sass-loader": "^16.0.5",
    "typescript": "~5.7.2",
    "typescript-eslint": "^8.31.1",
    "vite": "^6.3.3",
    "vite-plugin-vuetify": "^2.1.1",
